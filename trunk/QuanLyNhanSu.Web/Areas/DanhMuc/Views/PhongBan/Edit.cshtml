@model QuanLyNhanSu.Models.VA_W_PHONGBAN
@using QuanLyNhanSu.Web.Models;

@{
    ViewBag.Title = "Cập nhật phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MAPB)

        <div class="form-group">
            @Html.MyLabelFor(model => model.TENPB, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENPB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENPB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.MyLabelFor(model => model.THUTU, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.THUTU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.THUTU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.MyLabelFor(model => model.DIENTHOAI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIENTHOAI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.MyLabelFor(model => model.DIENTHOAINB, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIENTHOAINB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIENTHOAINB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.MyLabelFor(model => model.MACTY, htmlAttributes: new { @class = "control-label col-md-2",@id="selectCongTy" })
            <div class="col-md-10">
               @Html.DropDownListFor(model => model.MACTY, (SelectList)ViewBag.CongTys,new { @class= "selectpicker" })
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@QuanLyNhanSu.Commons.ControlText.Save" class="btn btn-info" />

                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <label class="label label-success">
                        @ViewBag.SuccessMessage
                    </label>
                }
            </div>
        </div>
    </div>
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#MACTY').attr('data-live-search', 'true');
        $('#MACTY').attr('data-width', '100%');
    });
</script>
<div>
    @Html.ActionLink(QuanLyNhanSu.Commons.ControlText.GoBack, "Index")
</div>
