@model IEnumerable<QuanLyNhanSu.Models.VA_W_CHUCVU>
@using QuanLyNhanSu.Web.Models;
@{
    ViewBag.Title = "Danh sách chức vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-heading header-title" >
    @ViewBag.Title
    <div class="pull-right">
        @using (Html.BeginForm())
        {
            <div class="input-group search-box">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "ChucVu")'">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </span>
                <input type="text" class="form-control" name="@QuanLyNhanSu.Commons.ControlText.KeyWordID" id="@QuanLyNhanSu.Commons.ControlText.KeyWordID" placeholder="@QuanLyNhanSu.Commons.ControlText.PlaceHolderSearch">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                    <button class="btn btn-default" type="button" title="Xuất Excel" onclick="ExportFile('mytable', 'DanhSachChucVu');">
                        <span class="glyphicon glyphicon-export"></span>
                    </button>
                </span>
            </div>
        }
    </div>
    </div>

<table class="table" id="mytable">
    <tr>
        <th>
            @Html.MyDisplayNameFor(model => model.TENCHUCVU)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TENCHUCVU)
        </td>
        <td>
            @Html.ActionLink(QuanLyNhanSu.Commons.ControlText.Edit, "Edit", new { id=item.MACHUCVU }) |
            @Html.ActionLink(QuanLyNhanSu.Commons.ControlText.Delete, "Delete", new { id=item.MACHUCVU })
        </td>
    </tr>
}

</table>
